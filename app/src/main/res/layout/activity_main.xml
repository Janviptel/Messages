<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main_layout_id"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_green"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/Welcome_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome To Messanger"
        android:layout_marginVertical="150dp"
        android:textSize="22dp"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/launcher_id"
        android:layout_width="125dp"
        android:layout_height="168dp"
        android:layout_below="@id/Welcome_id"
        android:layout_centerInParent="true"
        android:layout_marginTop="-150dp"
        android:src="@drawable/message_launcher_1" />

    <Button

        android:id="@+id/creat_account_id"
        android:text="Create An Account"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/launcher_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />

</RelativeLayout>